					<wb:field name="type">text</wb:field>
					<wb:field name="text">
						<![CDATA[<p class="info">Quelle: <em><a onclick="window.open(this.href); return false;" href="http://www.e-recht24.de/muster-disclaimer.htm">Disclaimer</a> von eRecht24, dem Portal zum Internetrecht von <a onclick="window.open(this.href); return false;" href="http://www.e-recht24.de/">Rechtsanwalt</a> Sören Siebert.</em></p>]]></wb:field>
				</wb:child>
			</wb:child>
		</wb:child>

		<!-- Sitemap -->
		<wb:child table="tl_page" var="page_sitemap">
			<wb:field name="title">Sitemap</wb:field>
			<wb:placeholder name="page_regular"/>
			<wb:placeholder name="page_hidden_nositemap"/>
			<wb:placeholder name="page_unmodifiable"/>

			<!-- Artikel -->
			<wb:child table="tl_article">
				<wb:field name="title" inherit="true" inheritTable="tl_page"/>
				<wb:placeholder name="article"/>

				<!-- Inhaltselement -->
				<wb:child table="tl_content">
					<wb:field name="type">module</wb:field>
					<wb:field name="module">$module_sitemap</wb:field>
					<wb:field name="cssID" eval="true">array('', 'tree')</wb:field>
				</wb:child>
			</wb:child>
		</wb:child>

		<!-- Suche -->
		<wb:child table="tl_page" var="page_search">
			<wb:field name="title">Suche</wb:field>
			<wb:placeholder name="page_regular"/>
			<wb:placeholder name="page_unmodifiable"/>

			<!-- Artikel -->
			<wb:child table="tl_article">
				<wb:field name="title" inherit="true" inheritTable="tl_page"/>
				<wb:placeholder name="article"/>

				<!-- Inhaltselement -->
				<wb:child table="tl_content">
					<wb:field name="type">module</wb:field>
					<wb:field name="module">$module_searchengine</wb:field>
				</wb:child>
			</wb:child>
		</wb:child>
	</wb:row>

	<!-- SCSS Assetic filter -->
	<wb:row table="tl_assetic_filter" var="assetic_scss_filter">
		<wb:field name="type">scss</wb:field>
		<wb:field name="note">$theme_name - Standard SCSS Filter</wb:field>
		<wb:field name="sassPath">/usr/local/bin/sass</wb:field>
	</wb:row>

	<!-- Compass Assetic filter -->
	<wb:row table="tl_assetic_filter" var="assetic_compass_filter">
		<wb:field name="type">compass</wb:field>
		<wb:field name="note">$theme_name - Standard Compass Filter</wb:field>
		<wb:field name="compassPath">/usr/local/bin/compass</wb:field>
	</wb:row>

	<!-- YUI-CSS Assetic filter -->
	<wb:row table="tl_assetic_filter" var="assetic_yuicss_filter">
		<wb:field name="type">yuiCss</wb:field>
		<wb:field name="note">$theme_name - YUI CSS</wb:field>
		<wb:field name="yuiPath">/usr/share/yui-compressor/yui-compressor.jar</wb:field>
	</wb:row>

	<!-- YUI-JS Assetic filter -->
	<wb:row table="tl_assetic_filter" var="assetic_yuijs_filter">
		<wb:field name="type">yuiJs</wb:field>
		<wb:field name="note">$theme_name - YUI JS</wb:field>
		<wb:field name="yuiPath">/usr/share/yui-compressor/yui-compressor.jar</wb:field>
	</wb:row>

	<!-- CSS Assetic filter chain -->
	<wb:row table="tl_assetic_filter_chain" var="assetic_css_chain">
		<wb:field name="type">css</wb:field>
		<wb:field name="name">$theme_name - CSS Filter</wb:field>
		<wb:field name="filters" eval="true">
			array(
				'filter:${assetic_yuicss_filter}'
			)
		</wb:field>
	</wb:row>

	<!-- JS Assetic filter chain -->
	<wb:row table="tl_assetic_filter_chain" var="assetic_js_chain">
		<wb:field name="type">js</wb:field>
		<wb:field name="name">$theme_name - JS Filter</wb:field>
		<wb:field name="filters" eval="true">
			array(
				'filter:${assetic_yuijs_filter}'
			)
		</wb:field>
	</wb:row>

	<wb:row table="tl_theme">
		<wb:field name="name">$theme_name</wb:field>
		<wb:field name="author">$this.User.name</wb:field>
		<wb:field name="folders" force-array="true">$uploadPath/Themes/${theme_name}</wb:field>
		<wb:field name="templates">templates/${theme_name}</wb:field>

		<!-- Standardlayout -->
		<wb:child table="tl_layout" var="layout">
			<wb:field name="name">Standardlayout</wb:field>
			<wb:field name="rows">3rw</wb:field>
			<wb:field name="headerHeight" eval="true">array('value'=>'', 'unit'=>'px')</wb:field>
			<wb:field name="footerHeight" eval="true">array('value'=>'', 'unit'=>'px')</wb:field>
			<wb:field name="cols">3cl</wb:field>
			<wb:field name="widthLeft" eval="true">array('value'=>200, 'unit'=>'px')</wb:field>
			<wb:field name="widthRight" eval="true">array('value'=>200, 'unit'=>'px')</wb:field>
			<wb:field name="framework" eval="true">array('layout.css')</wb:field>
			<wb:field name="theme_plus_stylesheets" eval="true">
				array(
					'$source_reset',
					'$source_normalize',
					'$source_formalize',
					'$source_layout',
					'$source_nav',
					'$source_content'
				)
			</wb:field>
			<wb:field name="modules" eval="true">
				array(
					array('mod'=>$module_header, 'col'=>'header'),
					array('mod'=>$module_left, 'col'=>'left'),
					array('mod'=>$module_main, 'col'=>'main'),
					array('mod'=>$module_right, 'col'=>'right'),
					array('mod'=>$module_footer, 'col'=>'footer')
				)
			</wb:field>
			<wb:field name="template">fe_page</wb:field>
			<wb:field name="doctype">html5</wb:field>
			<wb:field name="asseticStylesheetFilter">$assetic_css_chain</wb:field>
